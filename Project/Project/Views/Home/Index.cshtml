                        <div class="d-flex flex-column flex-lg-row align-items-center">
                            <ul class="navbar-nav ">
                                <li class="nav-item active">
                                    <a class="nav-link" href="@Url.Action("Index","Home")">
                                        Home <span class="sr-only"></span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("About","Home")">About </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Store","Home")">Store </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Contact","Home")">Contact Us</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("LogIn","Users")">Login</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Register","Users")">Register</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Giohang","GioHang")">
                                        <i class="fa fa-shopping-bag shoppingBag"></i>
                                    </a>
                                </li>
                            </ul>
                            <form class="form-inline my-2 my-lg-0 ml-0 ml-lg-4 mb-3mb-lg-0">
                                <button class="btn my-2 my-sm-0 nav_search-btn" type="submit"></button>
                            </form>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </section>

   

    <section class="shop_section layout_padding">
        <div class="container">
            <div class="box">
                <div class="detail-box">
                    <h2>
                        Apple Store
                    </h2>
                    <p>
                        There are many variations of passages of Lorem Ipsum available
                    </p>
                </div>
                <div class="img-box">
                    <img src="~/Content/images/macminim1mgnr3saathumb600x600-16524332710.jpg"
                         alt="">
                </div>
                <div class="btn-box">
                    <a href="">
                        Buy Now
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- end shop section -->
    <!-- about section -->

    <section class="about_section">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 px-0">
                    <div class="img-box">
                        <img src="~/Content/images/m_macmini.jpg" alt="">
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="detail-box">
                        <div class="heading_container">
                            <hr>
                            <h2>
                                About Our store Shop
                            </h2>
                        </div>
                        <p>
                            There are many variations of passages of Lorem Ipsum available,
                            but the majority have suffered alteration in some form, by
                            injected humour
                        </p>
                        <a href="">
                            Read More
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- end about section -->
    <!-- store section -->

    <section class="store_section layout_padding">
        <div class="container">
            <div class="heading_container">
                <hr>
                <h2>
                    Store
                </h2>
            </div>
        </div>

        <div class="container-fluid">
            <div class="store_container">
                @{
                    if (ViewBag.iPhone != null)
                    {
                        foreach (var item in ViewBag.iPhone)
                        {
                            <div class="box">
                                <img src="/@item.hinh" style="width:200px" />
                                <div class="link_box">
                                    <h5>
                                        @item.ten
                                    </h5>
                                    <a href="">
                                        Buy Now
                                    </a>
                                </div>
                            </div>
                        }
                    }
                }
            </div>
        </div>
        <h2>Mac</h2>
        <div class="container-fluid">
            <div class="store_container">
                @{
                    if (ViewBag.mac != null)
                    {
                        foreach (var item in ViewBag.mac)
                        {
                            <div class="box">
                                <img src="/@item.hinh" style="width:200px" />
                                <div class="link_box">
                                    <h5>
                                        @item.ten
                                    </h5>
                                    <a href="">
                                        Buy Now
                                    </a>
                                </div>
                            </div>
                        }
                    }
                }
            </div>
        </div>
    </section>

    <!-- end store section -->
    <!-- client section -->

