<body class="sub_page">
    <div class="hero_area">
        <!-- header section strats -->
        <div class="brand_box">
            <a class="navbar-brand" href="index.html">

            </a>
        </div>
        <!-- end header section -->
    </div>

    <!-- nav section -->

    <section class="nav_section">
        <div class="container">
            <div class="custom_nav2">
                <nav class="navbar navbar-expand custom_nav-container ">
                    <button class="navbar-toggler" type="button"
                            data-toggle="collapse"
                            data-target="#navbarSupportedContent"
                            aria-controls="navbarSupportedContent"
                            aria-expanded="false"
                            aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <div class="d-flex flex-column flex-lg-row align-items-center">
                            <ul class="navbar-nav ">
                                <li class="nav-item active">
                                    <a class="nav-link" href="@Url.Action("Index","Home")">
                                        Home <span class="sr-only"></span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("About","Home")">About </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Store","Home")">Store </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Contact","Home")">Contact Us</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("LogIn","Users")">Login</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Register","Users")">Register</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Giohang","GioHang")">
                                        <i class="fa fa-shopping-bag shoppingBag"></i>
                                    </a>
                                </li>
                            </ul>
                            <form class="form-inline my-2 my-lg-0 ml-0 ml-lg-4 mb-3mb-lg-0">
                                <button class="btn my-2 my-sm-0 nav_search-btn" type="submit"></button>
                            </form>
                        </div>
                    </div>

                </nav>
            </div>
        </div>
    </section>

    <!-- end nav section -->
    @model  Project.Models.LoginViewModel
    <div class="login-box">
        @using (Html.BeginForm("LogIn", "Users", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="user-box">

                @Html.TextBoxFor(m => m.tendangnhap, new { @class = "form-control", @placeholder = "Username", @required = "required" })
            </div>
            <div class="user-box">
                @Html.PasswordFor(m => m.matkhau, new { @class = "form-control", @placeholder = "Password", @required = "required" })
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        }
        <a href="@Url.Action("Register","Users")">Chưa có tài khoản?</a>
    </div>


    <!-- footer section -->

    <script type="text/javascript" src="~/Content/jquery-3.4.1.min.js"></script>
    <script type="text/javascript" src="~/Content/bootstrap.js"></script>
    <script type="text/javascript" src="~/Content/custom.js"></script>
</body>

</html>