<section class="store_section layout_padding">
    <div class="container-fluid">
        <div>
            <a href="#" class="logo-cate">
                <h2 class="title-text">Iphone</h2>
            </a>
        </div>
        <div class="store_container">

            @{
                if (ViewBag.iPhone != null)
                {
                    foreach (var item in ViewBag.iPhone)
                    {
                        <a href="/Home/Product_Details/@item.ma">
                            <div class="box">
                                <img src="/@item.hinh" class="image-item" />
                                <div class="link_box">
                                    <h5>
                                        @item.ten
                                    </h5>
                                    <span>Buy Now</span>
                                </div>
                            </div>
