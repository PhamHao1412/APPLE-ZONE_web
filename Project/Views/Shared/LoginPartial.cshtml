@using Project.Models
@{
    KhachHang kh = (KhachHang)Session["TaiKhoan"];
    NhanVien nv = (NhanVien)Session["NhanVien"];

}
@if (Session["TaiKhoan"] != null || Session["NhanVien"] != null)
{
    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">

            <a href="#" class="dropdown-toggle" data-toggle="dropdown"
               role="button" aria-haspopup="true" aria-
               expanded="false">
                @if (nv != null && nv.MaCV == 1)
                {
                    <span>Admin: @nv.Ten</span>
                }
                else if (nv != null && nv.MaCV == 2)
                {
                    <span>Nhân viên: @nv.Ten</span>

                }
                else
                {
                    <span class="name_kh" style="margin-left: 23px; margin-bottom: 20px;">@kh.Ten</span>
                }

            </a>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <li><a href="@Url.Action("ThongTinKhachHang", "Users")">Thông tin cá nhân</a></li>
                <li><a>@Html.ActionLink("Lịch sử mua hàng", "LichSuMuaHang", "GioHang")</a></li>
                <li><a>@Html.ActionLink("Thoát tài khoản", "LogOff", "Users")</a></li>
            </ul>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Đăng Nhập", "LogIn", "Users")</li>
    </ul>
}


